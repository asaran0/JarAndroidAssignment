<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circle"
        android:layout_width="@dimen/dim_50"
        android:layout_height="@dimen/dim_50"
        android:background="@drawable/circle"
        android:onClick="onCircle"
        app:layout_constraintBottom_toBottomOf="@+id/undo"
        app:layout_constraintEnd_toStartOf="@+id/rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/undo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rect"
        android:layout_width="@dimen/dim_50"
        android:layout_height="@dimen/dim_50"
        android:background="@color/colorAccent"
        android:onClick="onRect"
        app:layout_constraintBottom_toBottomOf="@+id/undo"
        app:layout_constraintEnd_toStartOf="@+id/undo"
        app:layout_constraintStart_toEndOf="@+id/circle"
        app:layout_constraintTop_toTopOf="@+id/undo" />

    <Button
        android:id="@+id/undo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_50"
        android:layout_marginBottom="@dimen/dim_24"
        android:text="Undo"
        android:onClick="onUndo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/next"
        app:layout_constraintStart_toEndOf="@+id/rect" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_50"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="@id/undo"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onNext"
        app:layout_constraintStart_toEndOf="@+id/undo" />

    <com.example.myapplication.presentation.shapes.CustomShape
        android:id="@+id/custom_shape"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/undo"
        android:layout_marginBottom="@dimen/dim_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>